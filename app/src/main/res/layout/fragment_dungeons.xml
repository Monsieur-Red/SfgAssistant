<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gigamole.navigationtabstrip.NavigationTabStrip
        android:id="@+id/navigation_tab_strip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:nts_color="@android:color/white"
        app:nts_size="12sp"
        app:nts_weight="4dp"
        app:nts_factor="2.5"
        app:nts_titles="@array/dungeons_tabs_title"
        app:nts_type="point"
        app:nts_gravity="bottom"
        app:nts_typeface="fonts/typeface.otf"
        app:nts_corners_radius="1.5dp"
        app:nts_animation_duration="200"
        app:nts_active_color="@color/primary_text"
        app:nts_inactive_color="#c4c4c4" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>